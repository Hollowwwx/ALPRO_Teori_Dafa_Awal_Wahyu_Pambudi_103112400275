package main

import (
	"fmt"
	"strings"
)

func main() {
	var char1, char2 string

	fmt.Println("Masukkan dua buah karakter yang dipisahkan oleh spasi:")
	fmt.Scanln(&char1, &char2)

	// Ubah kedua karakter menjadi huruf kecil untuk mempermudah perbandingan
	char1 = strings.ToLower(char1)
	char2 = strings.ToLower(char2)

	if char1 == char2 {
		fmt.Println("Ya")
	} else {
		fmt.Println("Tidak")
	}
}

package main

import "fmt"

func main() {
	var n int
	fmt.Print("Masukkan jumlah elemen deret (n): ")
	fmt.Scanln(&n)

	if n < 3 {
		fmt.Println("Deret tidak valid")
		return
	}

	deret := make([]int, n)
	fmt.Println("Masukkan elemen-elemen deret:")
	for i := 0; i < n; i++ {
		fmt.Scan(&deret[i])
	}

	// Hitung selisih antara elemen pertama dan kedua
	selisih := deret[1] - deret[0]

	// Periksa apakah selisih konsisten untuk semua elemen
	valid := true
	for i := 2; i < n; i++ {
		if deret[i]-deret[i-1] != selisih {
			valid = false
			break
		}
	}

	if valid {
		// Hitung jumlah total deret aritmatika
		jumlah := n * (deret[0] + deret[n-1]) / 2
		fmt.Println("Jumlah total:", jumlah)
	} else {
		fmt.Println("Bukan deret aritmatika")
	}
}
