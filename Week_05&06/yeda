package main

import "fmt"

func main() {
	var n int
	fmt.Print("Masukkan jumlah elemen deret (n): ")
	fmt.Scanln(&n)

	if n < 3 {
		fmt.Println("Deret tidak valid")
		return
	}

	deret := make(int, n)
	fmt.Println("Masukkan elemen-elemen deret:")
	for i := 0; i < n; i++ {
		fmt.Scan(&deret[i])
	}

	// Hitung selisih antara elemen pertama dan kedua
	selisih := deret[1] - deret[0]

	// Periksa apakah selisih konsisten untuk semua elemen
	valid := true
	for i := 2; i < n; i++ {
		if deret[i]-deret[i-1] != selisih {
			valid = false
			break
		}
	}

	if valid {
		// Hitung jumlah total deret aritmatika
		jumlah := n * (deret[0] + deret[n-1]) / 2

package main

import "fmt"

func main() {
	var n int
	fmt.Print("Masukkan bilangan bulat ganjil (n): ")
	fmt.Scanln(&n)

	if n%2 == 0 {
		fmt.Println("Input harus bilangan ganjil.")
		return
	}

	// Membuat pola X
	for i := 0; i < n; i++ {
		for j := 0; j < n; j++ {
			// Kondisi untuk mencetak angka
			if i == j || i+j == n-1 {
				// Mencetak angka sesuai pola
				if i <= n/2 {
					fmt.Print(i+1, " ")
				} else {
					fmt.Print(n-i, " ")
				}
			} else {
				fmt.Print("  ") // Menambahkan spasi untuk membentuk pola X
			}
		}
		fmt.Println() // Pindah ke baris berikutnya
	}
}
